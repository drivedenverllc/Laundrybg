<script>
const bagPrice = 10;
const rushFee = 20;

const bagsInput = document.getElementById('bags');
const rushCheckbox = document.getElementById('rush');
const totalDisplay = document.getElementById('total');

function calculateTotal() {
    let total = bagsInput.value * bagPrice;

    if (rushCheckbox.checked) {
        total += rushFee;
    }

    totalDisplay.innerText = total;
}

bagsInput.addEventListener('input', calculateTotal);
rushCheckbox.addEventListener('change', calculateTotal);

function checkout() {
    let total = totalDisplay.innerText;

    // ðŸ”¥ REPLACE WITH YOUR STRIPE LINK
    let stripeLink = "https://buy.stripe.com/YOUR-LINK-HERE";

    window.location.href = stripeLink + "?amount=" + total;
}
